@using Microsoft.AspNetCore.Identity
@using TalentBay1.Models 
@inject UserManager<IdentityUser> UserManager

<div>
    <h4>User Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Email
        </dt>
        <dd class="col-sm-10">
            @Model.Email
        </dd>
        <dt class="col-sm-2">
            Roles
        </dt>
        <dd class="col-sm-10">
            @foreach (var role in await UserManager.GetRolesAsync(Model))
            {
                <span>@role</span>
                <br />
            }
        </dd>
    </dl>
</div>

<form asp-action="UserDeleteConfirmed" asp-route-id="@Model.Id" method="post">
    @Html.AntiForgeryToken()
    <div class="form-group">
        <input type="submit" value="Delete" class="btn btn-danger" />
    </div>
</form>
