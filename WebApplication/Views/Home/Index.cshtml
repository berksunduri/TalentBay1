                    <div class="card-header bg-light text-center p-4">
                        @*<h1 class="m-0 text-primary">Sign Up Now</h1>*@
                    </div>
                    <div class="card-body rounded-bottom bg-white p-5">
                        <form>
                            <div class="form-group">
