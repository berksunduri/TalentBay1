@model IEnumerable<TalentBay1.Models.Course>
@using TalentBay1.Controllers
@{
    ViewData["Title"] = "Index";
}

@{
    var loggedInInstructorId = ViewBag.LoggedInInstructorId as string;
}

<h1 class="text-center">Edit Your Courses</h1>

<div class="container-fluid">
    <div class="row">
        @foreach (var item in Model)
        {
            // Only show items where the InstructorID matches the logged-in user's ID
            if (item.InstructorID == loggedInInstructorId)
            {
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card">
                        <img src="@Url.Content(item.ImageURL)" class="card-img-top" alt="Course Image">
                        <div class="card-body">
                            <h5 class="card-title">@item.Title</h5>
                            <p class="card-text">@item.Description</p>
                            <p class="card-text">Category: @item.Category</p>
                            <p class="card-text">Enrollment Count: @item.EnrollmentCount</p>
                            <a asp-action="Details" asp-route-id="@item.CourseID" class="btn btn-info">View Details</a>
                            <a asp-action="Edit" asp-route-id="@item.CourseID" class="btn btn-primary">Edit</a>
                            <a asp-action="Delete" asp-route-id="@item.CourseID" class="btn btn-danger">Delete</a>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>
